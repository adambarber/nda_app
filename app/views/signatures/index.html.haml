.row
  .col-md-10.col-md-offset-1
    = @nda.formatted_body
.row
  .col-md-10.col-md-offset-1
    = simple_form_for @signature do |f|
      = f.input :name, input_html: { style: "width: 95%; top: 80px; margin-left: 2.5%; z-index: 1; position: relative; font-size: 20px; padding: .5em;", placeholder: "Your first and last name" }, label: false
    %textarea{ style: "width: 100%; height: 250px; padding: .5em;" }
    .clearfix
      .pull-left
        %input{ type: "button", class: "btn btn-default", value: "Clear Signature", style: "margin-top: 1em; margin-right: 1em"}
      .pull-left
        %input{ type: "button", class: "btn btn-primary", value: "Confirm Signature", style: "margin-top: 1em"}

